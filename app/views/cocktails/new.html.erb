<h1>Add new cocktail</h1>

<%= simple_form_for(@cocktail) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
<br>
<%= link_to 'Back', cocktails_path, class: "btn btn-success" %>
