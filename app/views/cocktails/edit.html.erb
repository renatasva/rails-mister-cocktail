<div class="show-container">
  <h1>Edit cocktail details</h1>
  <div class="form">
    <%= simple_form_for(@cocktail) do |f| %>
      <div class="form-inputs">
        <%= f.input :name, :input_html => {:style=> 'width: 500px', class: 'form-design'} %>
        <%= f.input :description, as: :text, input_html: {rows: 4, :style=> 'width: 500px'} %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: "btn button-main" %>
      </div>
    <% end %>
  </div><br>
  <%= link_to '', cocktails_path, class: "button-back fas fa-arrow-circle-left" %>
</div>
