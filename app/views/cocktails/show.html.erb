<div class="show-container">
    <h2 class="title"> <%= @cocktail.name %></h2>
  <div class="row">
    <div class="col-sm-6 col-md-6">
      <div class="image" style="background-image: url(<%= cl_image_path @cocktail.photo, crop: :fill unless @cocktail.photo.blank? %>)";>
      </div>
    </div>
    <div class="col-sm-6 col-md-6">
      <div class="ingredients">
        <% @dose.each do |dose| %>
          <p><strong> <%= dose.ingredient.name %> </strong>
          <%= dose.description %>
          <%= link_to '', cocktail_dose_path(dose.cocktail, dose), method: :delete, data: { confirm: "Are you sure??" }, class: "far fa-trash-alt remove-link" %></p>
        <% end %>
        <%= link_to 'Add new ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
  <%= link_to 'Back', cocktails_path, class: "btn btn-danger" %>
</div>
